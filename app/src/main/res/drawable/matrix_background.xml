<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:startColor="#4caf50"
        android:endColor="#009688"
        android:centerColor="#1b5e20"
        android:angle="135"
        android:type="linear"
        android:centerX="0.5"
        android:centerY="0.5"
        android:gradientRadius="100dp"
        android:dither="true"
        android:useLevel="false" />
    <size
        android:width="10dp"
        android:height="10dp" />
    <corners
        android:radius="5dp" />
</shape>