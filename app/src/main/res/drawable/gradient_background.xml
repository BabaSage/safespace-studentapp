<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9C27B0" /> <!-- Purple background color -->
        </shape>
    </item>
    <item>
        <shape>
            <size
                android:height="100dp"
                android:width="100dp" />
            <gradient
                android:startColor="#FFC107"
                android:centerColor="#FFA000"
                android:endColor="#FFE082"
                android:type="radial"
                android:centerX="50%"
                android:centerY="50%" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:height="100dp"
                    android:width="100dp" />
                <gradient
                    android:startColor="#FFC107"
                    android:centerColor="#FFA000"
                    android:endColor="#FFE082"
                    android:type="linear"
                    android:angle="45" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45">
            <shape>
                <size
                    android:height="100dp"
                    android:width="100dp" />
                <gradient
                    android:startColor="#FFC107"
                    android:centerColor="#FFA000"
                    android:endColor="#FFE082"
                    android:type="linear"
                    android:angle="45" />
            </shape>
        </rotate>
    </item>
</layer-list>